@model UserLoginModel;

@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <div class="form-group">
        <h2>User Login</h2>
        <p>Login now to book a ticket!</p>
        <form asp-action="UserLogin" asp-controller="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserEmail"></label>
                <input asp-for="UserEmail" class="form-control" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPassword"></label>
                <input asp-for="UserPassword" class="form-control" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <input type="submit" value="Login" class="btn btn-primary" />
        </form> 
        <br>
        <b style = "color: red;">@ViewBag.message</b>
    </div>
</div>  
<div style="color:blue">
    <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="UserRegister"><i class="fas fa-user-plus" ></i>Register as a new User</a>
</div>