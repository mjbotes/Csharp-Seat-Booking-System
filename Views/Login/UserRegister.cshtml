@{
    ViewData["Title"] = "Registeration";
}

<div class="text-center">
    <div class="form-group">
        <h2>User Registeration</h2>
        <p>Register with your information to start booking tickets.</p>
        <form>
            <label>First Name</label>
            <input type="text" name="email" placeholder="Enter First name" />
            <label>Surname</label>
            <input type="text" name="email" placeholder="Enter Surname" />
            <br />
            <label>Email</label>
            <input type="email" name="email" placeholder="Enter Email address" />
            <label>Date of Birth</label>
            <input type="dob" name="date" />
            <br />
            <label>Password</label>
            <input type="password" name="password" placeholder="Enter Password" />
            <label>Confirm Password</label>
            <input type="password" name="password" placeholder="Confirm Password" />
            <br />
            <input type="submit" value="Register">
        </form>
    </div>
</div>